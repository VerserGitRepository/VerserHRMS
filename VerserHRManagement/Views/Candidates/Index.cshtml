<div class="body-content" style="font-size:10px;padding-left:0px;padding-top:20px;margin-left:10px">
    <div class="col-md-12">
        <table class="table table-bordered  table-responsive table-hover" id="mainTable" style="font-size:12px;width:120%;margin-right:10px;">
            <thead style="background-color:#FFA500; color:white">
                <tr>
                    <th>
                        @*@Html.DisplayName("Details")*@
                    </th>
                    <th style="width:10%">
                        @Html.DisplayName("Name")
                    </th>
                    <th style="width:30%">
                        @Html.DisplayName("Skills")
                    </th>
                    <th>
                        @Html.DisplayName("Levels")
                    </th>
                    <th>
                        @Html.DisplayName("EmploymentType")
                    </th>
                    <th style="width:10%">
                        @Html.DisplayName("Resume")
                    </th>
                    <th style="width:10%">
                        @Html.DisplayName("City")
                    </th>
                    <th style="width:10%">
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-warning btn-sm" })

                        </td>
                        <td style="width:auto">
                            @Html.DisplayFor(modelItem => item.CandidateName)
                        </td>
                        <td style="width:25%">
                            @Html.DisplayFor(modelItem => item.CandidateSkills)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TechnicianLevel)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.EmployementType)
                        </td>
                        <td style="width:10%">
                            @Html.HiddenFor(model => item.FilePath)
                            @if (!string.IsNullOrEmpty(item.FilePath))
                            {@Html.ActionLink(item.FilePath, "Download", "Candidates", new { file = item.FilePath }, null)}
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")"></script>
    <script src="~/Scripts/datatables.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#mainTable').DataTable();
        });
        //  ExportTimesSheetToExcel", "Candidates"

        function ExportData() {
            var data = {};
            $.ajax({
                type: "POST",
                url: './ExportTimesSheetToExcel',
                json: data

            });
        }
    </script>
    <body>
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.15/js/jquery.dataTables.js"></script>
        <script src="https://cdn.datatables.net/plug-ins/1.10.15/api/row().show().js"></script>
    </body>
}
