                <i class="fas fa-file-download"></i>
                @Html.ActionLink("DL", "DownloadFile", "Candidates", new { textval = "" }, new { @id = "resume", @class = "actionlink" })
            </span>

            @Html.Hidden("POLICE CHECK", null, new { @id = "hiddenCertificate" })
            <span class="input-group-btn-override">
                <i class="fas fa-file-download"></i>
                @Html.ActionLink("POLICE CHECK", "DownloadFile", "Candidates", new { textval = "" }, new { @id = "certificate", @class = "actionlink" })
            </span>
        </div>
        <div class="col-md-3">
            @Html.DropDownListFor(Model => Model.InactiveReason, new List<SelectListItem>
            { new SelectListItem {Text="RESUME",Value="RESUME" },
            new SelectListItem {Text="DRIVING LICENSE",Value="DL" },
            new SelectListItem {Text="VISA",Value="VISA" },
                new SelectListItem {Text="SUPER FORM",Value="SUPERFORM" },
                new SelectListItem {Text="TNF",Value="TNF" },
                new SelectListItem {Text="BANK DETAILS",Value="BANKDETAILS" },
                new SelectListItem {Text="CODE OF CONDUCT",Value="CODEOFCONDUCT" },
                new SelectListItem {Text="WHS",Value="WHS" },
            }, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.InactiveReason, "", new { @class = "text-danger" })
            <input id="Certificateimgupload" type="file" style="display:none;">
            <button type="button" id="btnCertificates" class="btn btn-sm btn-labeled btn-outline-secondary" style="padding-left:20px;border-color:gray">
                <span class="btn-label"><i class="glyphicon glyphicon-folder-open"></i> </span>Certificate
            </button>
        </div>
    </div>

