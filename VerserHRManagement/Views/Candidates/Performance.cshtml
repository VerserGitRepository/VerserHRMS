<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script>
    $(document).ready(function () {
        $("#add_row").click(function () {
            var Goal = $("#Goal").val();
            var Status = $("#Status").val();
            var GoalStartDate = $("#GoalStartDate").val();
            var GoalEndtDate = $("#GoalEndtDate").val();
            var markup = "<tr><td><input type='checkbox' name='record'></td><td>"
                + Goal + "</td><td>"
                + Status + "</td><td>"
                + GoalStartDate + "</td><td>"
                + GoalEndtDate + "</td></tr>";
            $("#GoalTable tbody").append(markup);
        });

        // Find and remove selected table rows
        $("#delete_row").click(function () {
            $("#GoalTable tbody").find('input[name="record"]').each(function () {
                if ($(this).is(":checked")) {
                    $(this).parents("tr").remove();
                }
            });
        });
    });
</script>

