<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div id="LogoImage" style="text-align:left; padding-right:20px">
                    <img src="~/Images/Verser.png" style="height:49px; width:150px ;vertical-align:top; background-color:#D3D3D3" />
                </div>
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["FullUserName"] != null)
                    {
                    <li>@Html.ActionLink("HOME", "Index", "Candidates")</li>
                    <li>@Html.ActionLink("REGISTER NEW PROFILE", "Create", "Candidates")</li>
                    <li>@Html.ActionLink("BULK SMS", "Index", "MultiSelectDropDown")</li>
                    @*<li>@Html.ActionLink("LIST", "SMSBroadcast", "Candidates")</li>*@
                    <li>@Html.ActionLink("CONTACT", "Contact", "Home")</li>
                }

                </ul>
                <ul class="nav navbar-nav" style="float:right">
                    @if (Session["FullUserName"] != null)
                    {
                        <li style="font-size:small;color:white;font-weight:100;float:right">@Html.ActionLink("Logout", "Login", "Login")</li>
                    }
                    else
                    {
                        <li style="font-size:small;color:white;font-weight:100;float:right">@Html.ActionLink("Login", "Login", "Login")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (@HttpContext.Current.Session["ResultMessage"] != null)
        {
            <div class="alert alert-info text-center  alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @HttpContext.Current.Session["ResultMessage"]
            </div>
@@HttpContext.Current.Session["ResultMessage"] = null;
        }

        @if (@HttpContext.Current.Session["ErrorMessage"] != null)
        {
            <div class="alert alert-danger text-center  alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @HttpContext.Current.Session["ErrorMessage"]
            </div>
@@HttpContext.Current.Session["ErrorMessage"] = null;
        }

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year -Verser Technology Lifecycles</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>


    .navbar-inverse {
        background-color: #F5F5F5 !important;
        border-color: #FFFFFF !important;
    }

        .navbar-inverse .navbar-nav > li > a {
            color: #1372AB;
            font-family: sans-serif;
            font-weight: 600;
        }

            .navbar-inverse .navbar-nav > li > a:hover {
                background-color: #1372AB !important;
                color: #FFFFFF;
            }

    a {
        color: #959ca1;
    }

    .navbar, .navbar div {
        min-height: 40px;
        max-height: 60px;
        height: 50px;
       /*// margin-left: 60px;*/
    }
    /* Additional styles to style some of your child elements */
    .navbar-brand {
        padding: 10px;
    }

    .navbar .navbar-toggle {
        padding: 4px 10px;
    }
</style>