<script>
    $(document).ready(function () {
        // Enable Live Search.
        $('#CountryList').multiselect({
            includeSelectAllOption: true,
            maxHeight: 250,
            buttonWidth: '280px',
            enableFiltering: true,
            enableCaseInsensitiveFiltering: true
        });
    });



</script>

